{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "removeComments": true,
    "lib": ["es2015", "dom"]
  },
  "include" :[
    "src/**/*",
    "dist/**/*"
  ],
  "exclude": [
    "node_modules", "vendor"
  ]
}
